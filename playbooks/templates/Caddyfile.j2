{{ dns }} {
    log {
        output file /var/log/caddy/{{ dns }}-access.log
    }

    root * /srv/webroot
    file_server
}

{{ dns_sourcebans }} {
    log {
        output file /var/log/caddy/{{ dns_sourcebans }}-access.log
    }

    root * /srv/sourcebans/sourcebans-pp-1.7.0.webpanel-only
    php_fastcgi unix//run/php/php8.1-fpm.sock
    file_server
}

